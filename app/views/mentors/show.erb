<h2><%=@user.name%></h2>

<h3>About Me:</h3>
<p><%= @user.mentor_description %></p>
<br>

<h3>Location:</h3>
<p><%= @user.location %></p>
<br>

<h3>Linked In:</h3>
<p><a href="<%= @user.linked_in %>" target="_blank"><%= @user.linked_in %></a></p>

<br>

<h3>Mentorships:</h3>
<ul>
  <%@user.mentorships.each do |startup|%>
  <li><a href="/startups/<%= startup.id%>"><%= startup.name%></a></li>
  <%end%>
</ul>

<br><br>

<% if logged_in? %>
  <a href="/mentors/<%= @user.id %>/edit">Edit Mentor Profile</a>
  <br><br>

<% end %>
